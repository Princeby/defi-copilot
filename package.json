{
  "name": "defi-copilot",
  "version": "1.0.0",
  "description": "DeFi Copilot with 1inch Fusion+ Cross-Chain Extension for Ethereum â†” Polkadot",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix",
    "demo": "ts-node src/demo/bidirectional-demo.ts",
    "demo:eth-to-dot": "ts-node src/demo/eth-to-polkadot.ts",
    "demo:dot-to-eth": "ts-node src/demo/polkadot-to-eth.ts",
    "deploy:testnet": "ts-node scripts/deploy-testnet.ts",
    "deploy:mainnet": "ts-node scripts/deploy-mainnet.ts"
  },
  "keywords": [
    "defi",
    "cross-chain",
    "1inch",
    "fusion",
    "ethereum",
    "polkadot",
    "htlc",
    "swap"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@1inch/byte-utils": "2.6.0",
    "@1inch/cross-chain-sdk": "v0.1.15-rc.0",
    "@polkadot/api": "^16.4.2",
    "@polkadot/api-contract": "^16.4.2",
    "@polkadot/keyring": "^13.2.1",
    "@polkadot/util": "^13.2.1",
    "@polkadot/util-crypto": "^13.2.1",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "winston": "^3.17.0",
    "prool": "0.0.24",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^30.0.5",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/demo/**/*.ts"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "import",
      "unused-imports",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "unused-imports/no-unused-imports": "error",
      "@typescript-eslint/no-unused-vars": "error"
    },
    "env": {
      "node": true,
      "es2022": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}