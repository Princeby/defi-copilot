{
  "extends": "@1inch/tsconfig",
  "compilerOptions": {
    "resolveJsonModule": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "outDir": "./dist",
    "target": "ES2023",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "contracts/**/*",
    "**/*.test.ts",
    "**/test/**/*",
    "**/hardhat.config.ts"
  ]
}